{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 490,
    "height": 300,
    "background":"transparent",
    "data": {
    "url": "https://raw.githubusercontent.com/HongnuoLyu/FIT3179_Assignment2/main/%E5%9B%BE3%E6%AD%BB%E4%BA%A1%E5%8F%97%E4%BC%A4.csv"
    },
    "params": [
        {
        "name": "Type_Selection",
        "bind": {
        "input": "select",
        "options": [
        null,
        "Death",
        "Injury"
        ],
        "labels":[
        "Show All",
        "Death Rate",
        "Injury Rate"
        ],
        "name": ""
        }
        }
        ],
    "transform": [
        {"filter": "Type_Selection == null || datum.Type == Type_Selection"}],
    "encoding": {
    "y": {
    "field": "Rate",
    "type": "quantitative",
    "title": "Death/ Injury Rate",
    "axis": {"labelColor":"white","titleColor":"white","domainColor":"white","gridColor":"white","gridWidth":0.5}
    },
    "x": {
    "field": "Year",
    "type": "ordinal",
    "axis": {"labelAngle": 0,"labelColor":"white","titleColor":"white","domainColor":"white","gridColor":"white","gridWidth":0.5}
    }
},    
    "layer":[
    {"mark": "trail",
    "encoding": {
    "color": {
               "field": "Type",
               "type": "nominal",
               "legend":{
                "titleColor":"white",
                "labelColor":"white"
            },
            "scale":{
                "domain":["Death","Injury"],
                "range":["#e41a1c","#fa9fb5"]
            }},
    "size": {"field":"Rate","type":"quantitative",
    "legend":{
        "titleColor":"white",
        "labelColor":"white"
    }},
    "tooltip": [
        {"field": "Year", "type": "ordinal"},
        {"field": "Type", "type": "nominal"},
        {"field": "Rate", "type": "quantitative", "format":","}]
}},{
    "mark": {
        "type":"text",
        "align": "center",
        "baseline": "line-bottom",
        "color":"white"
       },
"encoding": {
    "text": {"field": "Rate", 
             "type": "quantitative", 
             "format": ".3f"
            },
    "color":{
             "scale":{
             "range":["#ffffff"]
                }},
    "opacity": {
        "condition": {
        "test": "Type_Selection == null",
        "value": 0
        },
        "value": 1
        },        
"tooltip": [ 
    {"field": "Year", "type": "ordinal"},
    {"field": "Type", "type": "nominal"},
    {"field": "Rate", "type": "quantitative", "format":","}
   
]
}
}]}
