{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/HongnuoLyu/FIT3179_Assignment2/main/%E5%9B%BE4%E6%94%BB%E5%87%BB%E7%B1%BB%E5%9E%8B.csv"},
  "vconcat": [{
    "width": 700,
    "height":200,
    "title": "The Number of Times Different Attack Types Occurred during 1997-2017",
    "mark": "area",
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "timeUnit":"yearmonth",
        "scale": {"domain": {"param": "brush"}},
        "axis": {"title": "", "tickCount": 5, "format": "%b-%Y"}
      },
      "y": {"field": "Amount", "type": "quantitative",
      "title":"The Number of Occurrences"
      },
      "color":{
        "field":"Attack Type",
        "scale":{
         "range":["#fde0ef","#d9d9d9","#fb8072","#fa9fb5","#969696","#cb181d","#f768a1","#737373","#67000d"]      
        }
    }
    }
  }, {
    "width": 700,
    "height": 50,
    "mark": "area",
    "params": [{
      "name": "brush",
      "select": {"type": "interval", "encodings": ["x"]}
    }],
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "title":"Date",
        "timeUnit":"yearmonth",
        "axis": {"format": "%Y"}
      },
      "y": {
        "aggregate": "sum",
        "field": "Amount",
        "type": "quantitative",
        "title":"Amount",
        "axis": {"tickCount": 3, "grid": false}
      },
      "color":{
       "field":"Attack Type",
        "scale":{
         "range":["#fde0ef","#d9d9d9","#fb8072","#fa9fb5","#969696","#cb181d","#f768a1","#737373","#67000d"] 
    }}
 }}]
}