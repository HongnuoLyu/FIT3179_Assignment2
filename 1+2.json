{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background":"transparent",
    "data": {
        "url": "https://raw.githubusercontent.com/HongnuoLyu/FIT3179_Assignment2/main/%E5%9B%BE1%262.csv"
    },
    "hconcat": [{
            "vconcat": [{
                "width": 587,
                "height": 300,
                "projection": {
                    "type": "equalEarth", "rotate": [-150, 0, 0]
                },
                "layer": [{
                        "data": {
                            "url": "https://raw.githubusercontent.com/HongnuoLyu/FIT3179_Assignment2/main/ne_110m_admin_0_countries.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "transform": [{
                            "calculate": "'Data is not available in ' + datum.properties.NAME",
                            "as": "note"
                        }],
                        "mark": {
                            "type": "geoshape",
                            "fill": "#ddd",
                            "stroke": "white",
                            "strokeWidth": 1
                        },
                        "encoding": { "tooltip": { "field": "note" } }
                    },
                    {
                        "transform": [
                            { "filter": { "param": "time_brush" } },
                            {
                                "aggregate": [{
                                    "op": "sum",
                                    "field": "Amount",
                                    "as": "sum_Amount"
                                }],
                                "groupby": ["Country"]
                            },
                            {
                                "lookup": "Country",
                                "from": {
                                    "data": {
                                        "url": "https://raw.githubusercontent.com/HongnuoLyu/FIT3179_Assignment2/main/ne_110m_admin_0_countries.topojson",
                                        "format": {
                                            "type": "topojson",
                                            "feature": "ne_110m_admin_0_countries"
                                        }
                                    },
                                    "key": "properties.NAME"
                                },
                                "as": "geo"
                            }
                        ],
                        "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
                        "encoding": {
                            "shape": { "field": "geo", "type": "geojson" },
                            "color": {
                                "field": "sum_Amount",
                                "type": "quantitative",
                                "scale": {
                                    "type": "threshold",
                                    "domain":[50,100,200,400,800,1600,3200,6400],
                                    "range":["#fee0d2","#fcc5c0","#fcbba1","#fc9272","#fb6a4a","#ef3b2c","#cb181d","#a50f15","#67000d"]
                                },
                                "legend": { "title": "Total Incidenets",
                                "labelColor":"white",
                                "titleColor":"white" }
                            },
                            "tooltip": [
                                { "field": "Country", "type": "nominal", "title": "Country" },
                                {
                                    "field": "sum_Amount",
                                    "type": "quantitative",
                                    "title": "Total Incidents",
                                    "format": ","
                                }
                            ]
                        }
                        }
                ]
            }, {
                "width": 587,
                "height": 60,
                "params": [{
                        "name": "time_brush",
                        "select": { "type": "interval", "encodings": ["x"] }
                    }
                ],
                "mark": "bar",
                "title": {
                    "text":"Use this bar chart to filter out the data based on time",
                    "color":"white"
                    }, 
                "encoding": {
                    "x": {
                        "timeUnit": "yearmonth",
                        "field": "Date",
                        "type": "temporal",
                        "axis": { "title": "Year", "format": "%Y", 
                        "tickCount":{ "interval": "year", "step": 1 },
                        "labelColor":"white",
                        "gridColor":"white",
                        "titleColor":"white",
                        "tickColor":"white",
                        "domainColor":"white"
                    }
                    },
                    "y": {
                        "aggregate":"sum",
                        "field": "Amount",
                        "axis": { "title": "Total Incidents",
                        "labelColor":"white",
                        "gridColor":"white",
                        "titleColor":"white",
                        "tickColor":"white",
                        "domainColor":"white" }
    
                    },
                    "color":{
                        "aggregate":"sum",
                        "field":"Amount",
                        "scale":{
                            "domain":[1000],
                            "range":["#de2d26"]
                        },
                        "legend":null
                        }
                    }
                    }
            ]
        }
    ],

    "config": {

    }
}